<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".PagosActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Puede realizar su deposito en cualquier tienda OXXO con la siguiente referencia"
        android:textColor="@color/letras"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_gravity="center"

        android:src="@drawable/ic_oxxo_foreground"></ImageView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="4 1 6 9 1 6 0 4 6 6 7 7 9 0 0 7"
        android:textColor="@color/materialyellow"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Enviar un WhatsApp con los siguientes datos"
        android:textColor="@color/letras"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="- Nombre \n - Correo electronico \n - Ficha de deposito"
        android:textColor="@color/materialyellow"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="C.T."
        android:textColor="@color/letras"
        android:textSize="24sp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/ic_whats_app">

        </ImageView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="   998 503 2017"
            android:textColor="@color/colorVerdebtn"
            android:textSize="28sp" />
</LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="C.T. Agradece su preferencia."
        android:textColor="@color/materialyellow"
        android:textSize="18sp" />

</LinearLayout>